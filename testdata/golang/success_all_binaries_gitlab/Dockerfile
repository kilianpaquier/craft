LABEL org.opencontainers.image.documentation="example.com/kilianpaquier/craft"

WORKDIR /app

COPY --from=build \
    /app/cli-name \
    /app/cron-name \
    /app/job-name \
    /app/worker-name \
    ./
COPY launcher.sh launcher.sh

EXPOSE 5000


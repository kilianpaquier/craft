FROM golang:1.22.2 AS build

WORKDIR /app

COPY . .

# hadolint ignore=DL3059
RUN go mod download
# hadolint ignore=DL3059
RUN CGO_ENABLED=0 go build -o worker-appli cmd/worker-appli/main.go


# Binaries for programs
*.exe
*.exe~
*.dll
*.so
*.dylib
dist

# Test binary, built with `go test -c`
*.test

# Output of the go coverage tool, specifically when used with LiteIDE
*.out

# Dependency directories (remove the comment below to include it)
# vendor/

# Go workspace file
go.work

# reports
reports/

# configs
.env

# binaries
{{- range $name, $config := .Clis }}
{{ $name }}
{{ printf "!%s/" $name }}
{{- end }}

{{- if gt (len .Crons) 0 }}
cron-*
!cron-*/
{{- end }}

{{- if gt (len .Jobs) 0 }}
job-*
!job-*/
{{- end }}

{{- if gt (len .Workers) 0 }}
worker-*
!worker-*/
{{- end }}
{{- end }}
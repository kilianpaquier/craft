# Code generated by craft; DO NOT EDIT.

coverage:
  precision: 2
  round: down
  range: 85...100

  status:
    project:
      default:
        threshold: 2.5%
    patch:
      default:
        threshold: 2.5%

<<- /* coverable is meant to be true only when there's at least on language that can be affected by coverage */>>
<<- $coverable := or (hasKey .Languages "golang") (hasKey .Languages "nodejs") >>

<<- if $coverable >>

ignore:
<<- if hasKey .Languages "golang" >>
  - "cmd"
  - "examples"
  - "**/cobra/**"
  - "**/mocks/**"
  - "**/tests/**"
  - "**/testutils/**"
<<- end >>
<<- if hasKey .Languages "nodejs" >>
  - "dist"
  - "node_modules"
  - "**/*.spec.ts"
  - "**/*.test.js"
<<- end >>
<<- end >>
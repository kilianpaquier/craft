{
    "$id": "https://raw.githubusercontent.com/kilianpaquier/craft/main/.schemas/craft.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Craft",
    "description": "Craft configuration file",
    "type": "object",
    "additionalProperties": false,
    "$defs": {
        "ci": {
            "description": "CI definition to help generate specific files.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "auth": {
                    "description": "Auth configurations for various features in CI.",
                    "type": "object",
                    "properties": {
                        "maintenance": {
                            "description": "Maintenance auth strategy for the specified bot in maintenance option.",
                            "type": "string",
                            "enum": [
                                "github-app",
                                "github-token",
                                "mend.io",
                                "personal-token"
                            ]
                        },
                        "release": {
                            "description": "Release auth strategy.",
                            "type": "string",
                            "enum": [
                                "github-app",
                                "github-token",
                                "personal-token"
                            ]
                        }
                    }
                },
                "name": {
                    "description": "CI Name.",
                    "default": "github",
                    "anyOf": [
                        {
                            "type": "string",
                            "enum": [
                                "github",
                                "gitlab"
                            ]
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "options": {
                    "description": "CI Options.",
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "string",
                                "enum": [
                                    "codecov",
                                    "codeql",
                                    "labeler",
                                    "sonar"
                                ]
                            },
                            {
                                "type": "string"
                            }
                        ]
                    }
                },
                "release": {
                    "description": "Release specific configuration.",
                    "type": "object",
                    "properties": {
                        "auto": {
                            "description": "Whether the release should run automatically.",
                            "type": "boolean"
                        },
                        "backmerge": {
                            "description": "Whether backmerging should be configured for main, staging and develop branches.",
                            "type": "boolean"
                        }
                    }
                },
                "static": {
                    "description": "Static deployment configuration.",
                    "type": "object",
                    "properties": {
                        "auto": {
                            "description": "Whether to automatically deploy static builds or not on main branches for github and on protected branches for gitlab.",
                            "type": "boolean"
                        },
                        "name": {
                            "description": "Static deployment name.",
                            "type": "string",
                            "enum": [
                                "netlify",
                                "pages"
                            ]
                        }
                    },
                    "required": [
                        "name"
                    ]
                }
            },
            "required": [
                "name"
            ],
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "release": false
                        }
                    },
                    "then": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "release": false
                                }
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "name": {
                                "const": "github"
                            }
                        },
                        "required": [
                            "release"
                        ]
                    },
                    "then": {
                        "properties": {
                            "auth": {
                                "required": [
                                    "release"
                                ]
                            }
                        },
                        "required": [
                            "auth"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "name": {
                                "const": "gitlab"
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "release": false
                                }
                            }
                        }
                    }
                }
            ]
        },
        "docker": {
            "description": "Docker definition.",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "port": {
                    "description": "Container port to override the default one, 3000.",
                    "type": "integer"
                },
                "registry": {
                    "description": "Docker registry associated to project. It will be used for CI docker build & push alongside chart image pull.",
                    "type": "string"
                }
            }
        },
        "maintainer": {
            "description": "Maintainer definition",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "email": {
                    "description": "Maintainer email.",
                    "type": "string"
                },
                "name": {
                    "description": "Maintainer name (can be any entity, person name, group name, etc.).",
                    "type": "string"
                },
                "url": {
                    "description": "Maintainer URL.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        }
    },
    "properties": {
        "bot": {
            "description": "Bot in charge of keeping dependencies up to date.",
            "type": "string",
            "enum": [
                "dependabot",
                "renovate"
            ]
        },
        "ci": {
            "$ref": "#/$defs/ci"
        },
        "description": {
            "description": "Description, only useful when working with docker option and helm generations.",
            "type": "string"
        },
        "docker": {
            "$ref": "#/$defs/docker"
        },
        "license": {
            "description": "License name.",
            "type": "string",
            "default": "mit",
            "enum": [
                "agpl-3.0",
                "apache-2.0",
                "bsd-2-clause",
                "bsd-3-clause",
                "bsl-1.0",
                "cc0-1.0",
                "epl-2.0",
                "gpl-2.0",
                "gpl-3.0",
                "lgpl-2.1",
                "mit",
                "mpl-2.0",
                "unlicense"
            ]
        },
        "maintainers": {
            "description": "List of maintainers.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/maintainer"
            },
            "minItems": 1
        },
        "no_chart": {
            "description": "Disable and remove chart generation.",
            "type": "boolean"
        },
        "no_goreleaser": {
            "description": "Disable and remove goreleaser configuration for golang based projects with a CLI.",
            "type": "boolean"
        },
        "no_makefile": {
            "description": "Disable and remove makefile generation.",
            "type": "boolean"
        },
        "no_readme": {
            "description": "Disable and remove README.md generation.",
            "type": "boolean"
        },
        "platform": {
            "description": "Platform for README.md badges (automatically parsed with git origin URL by default).",
            "type": "string",
            "enum": [
                "bitbucket",
                "gitea",
                "github",
                "gitlab"
            ]
        }
    },
    "required": [
        "maintainers"
    ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "platform": {
                        "const": "gitlab"
                    }
                }
            },
            "then": {
                "properties": {
                    "bot": {
                        "const": "renovate"
                    },
                    "ci": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "maintenance": false
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "bot": {
                        "const": "dependabot"
                    }
                }
            },
            "then": {
                "properties": {
                    "ci": {
                        "properties": {
                            "auth": {
                                "properties": {
                                    "maintenance": false
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "bot": {
                        "const": "renovate"
                    },
                    "ci": {
                        "properties": {
                            "name": {
                                "const": "github"
                            }
                        }
                    }
                },
                "required": [
                    "bot",
                    "ci"
                ]
            },
            "then": {
                "properties": {
                    "ci": {
                        "properties": {
                            "auth": {
                                "required": [
                                    "maintenance"
                                ]
                            }
                        },
                        "required": [
                            "auth"
                        ]
                    }
                }
            }
        }
    ]
}